package com.gmail.a1ekskosyak;

public class Main {

	public static void main(String[] args) {

		int[] array = new int[] { 5, 7, 1, 3, 18, 37, 2, 5, 1, 3, 6, 7, 8, 2, 9, 13, 42, 15 };
		int max = returnMax(array);
		System.out.println("Max value = " + max);
	}

	static int returnMax(int[] arr) {
		int max = 0;
		for (int i : arr) {
			if (i > max) {
				max = i;
			}
		}
		return max;
	}
}
