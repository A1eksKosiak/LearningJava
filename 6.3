package com.gmail.a1ekskosyak;

public class Main {

	public static void main(String[] args) {

		int a = 5;
		int b = 4;
		drawRectangle(a, b);
	}

	static void drawRectangle(int a, int b) {

		for (int i = 0; i <= a; i++) {
			for (int j = 0; j <= b; j++) {
				if (j == 0 || j == b || i == 0 || i == a) {
					System.out.print("*");
				} else {
					System.out.print(" ");
				}
			}
			System.out.println();
		}
	}
}
