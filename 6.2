package com.gmail.a1ekskosyak;

public class Main {

	public static void main(String[] args) {

		String text = "Hello! I want to see number ";
		int numInt = 15;
		double numDouble = 3.15;
		System.out.println(sumConcatenation(text, numInt, numDouble));
	}

	static String sumConcatenation(String a, int b, double c) {
		String sumCon = a + (b + c);
		return sumCon;
	}
}
