package com.gmail.a1ekskosyak;

public class Main {

	public static void main(String[] args) {

		String text = "Where is my   little  pony?   ";
		System.out.println(numberOfWords(text));

	}

	static int numberOfWords(String text) {
		int count = 0;
		char[] a = text.toCharArray();
		/* Every word ends with "space" */
		for (int i = 0; i < a.length; i++) {
			if (a[i] == ' ' && a[i - 1] != 0 && a[i - 1] != 0) {
				/* Check for type with few spaces */
				if (a[i - 1] != ' ') {
					/* If last char is not empty */
					if (a[i] + 1 != 0) {
						count++;
					}
				}
			}
		}
		return count;
	}

}
