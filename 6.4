package com.gmail.a1ekskosyak;

public class Main {

	public static void main(String[] args) {

		int[] arr = new int[] { 1, 7, 3, 2, 8, 13, 47, 8, 0, -12, 5, 3 };
		int num = 3;
		int index = searchElement(arr, num);
		if (index == -1) {
			System.out.println("There's no such number in array! Error # " + index);
		}
		System.out.println("Last index is under #: " + index);
	}

	static int searchElement(int[] array, int number) {
		int index = -1;
		for (int i = 0; i < array.length; i++) {
			if (array[i] == number) {
				if (i != -1) {
					System.out.println(i);
				}
				index = i;
			}
		}
		return index;
	}
}
