package com.gmail.a1ekskosyak;

import java.util.Arrays;

public class Main {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		int[] arrayOne = new int[15];
		int[] arrayTwo = new int[arrayOne.length * 2];
		for (int i = 0; i < arrayOne.length; i++) {
			arrayOne[i] = (int) (Math.random() * 10);
		}
		System.out.println(Arrays.toString(arrayOne));
		arrayTwo = Arrays.copyOf(arrayOne, arrayOne.length * 2);
		for (int i = arrayOne.length; i < arrayTwo.length; i++) {
			arrayTwo[i] = arrayOne[i - arrayOne.length] * 2;
		}
		System.out.println(Arrays.toString(arrayTwo));
	}

}
